
{
  "manifest_version": 3,
  "name": "Replay Locker - Trade Capture",
  "version": "1.0.0",
  "description": "Automatically capture and sync trading data with Replay Locker",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs",
    "notifications"
  ],
  "host_permissions": [
    "https://www.tradingview.com/*",
    "https://tradingview.com/*",
    "https://*.mt4web.com/*",
    "https://*.mt5web.com/*",
    "https://*.fxpro.com/*",
    "https://*.oanda.com/*",
    "https://*.ig.com/*",
    "https://trade-vision-vault.vercel.app/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.tradingview.com/*",
        "https://tradingview.com/*"
      ],
      "js": ["content-tradingview.js"],
      "css": ["content-styles.css"],
      "run_at": "document_end"
    },
    {
      "matches": [
        "https://*.mt4web.com/*",
        "https://*.mt5web.com/*"
      ],
      "js": ["content-mt4.js"],
      "css": ["content-styles.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Replay Locker - Trade Capture"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["injected-script.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
